<% content_for :styles do stylesheet_link_tag "reviews" end %>

<% content_for :page_header do %>
	<%= @header %>
	<%= form_tag business_reviews_path, :method => :get, :id => "reviews-view",  do %>
		<input type="radio" id="radio1" name="v" value="1" <%= @view == 1 ? 'checked="checked"' : ''%> /><label for="radio1">Pending Approval</label>
		<input type="radio" id="radio2" name="v" value="2" <%= @view == 2 ? 'checked="checked"' : ''%> /><label for="radio2">Approved Reviews</label>
		<input type="radio" id="radio3" name="v" value="3" <%= @view == 3 ? 'checked="checked"' : ''%> /><label for="radio3">Rejected Reviews</label>
	<% end %>
<% end %>
<div class="btns-tab">
	<% if(@business.is_user_admin?(current_user)) %>
		<%= link_to "", "#", :id => "manage-reqs-link", :href => business_review_requests_path(@business), :title => "Send review requests" %>
	<% end %>
</div>
<% if @reviews.empty? %>
	<span class="no-records">There are no reviews at this time</span>
<% else %>
	<ul id="review-requests" class="standard-list">
		<%= render :partial => "reviews/review", :collection => @reviews, :locals => { :show_admin => true, :truncate_review => false }  %>
	</ul>
	<%= render :partial => 'shared/pager', :locals => { :items => @reviews, :label => "review" } %>
<% end %>