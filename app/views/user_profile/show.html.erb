<% content_for :styles do stylesheet_link_tag "user_profile.css" end %>

<div id="profile-details-pane" class="left-col">
	<div id="avatar-outer">
		<%= raw display_avatar(@user, :large)%>
	</div>
	<div id="user-bio">
		<h2>About <%= @profile.first_name %></h2>
		<%= @profile.biography %>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"></div>
</div>
<div id="profile-content-pane" class="right-col">
	<div id="user-details">
		<h1><%= @user.display_name %></h1>
		<h2><%= @user.location %></h2>
		<div id="user-connect-btns" class="action-btn-outer">
			<% if(current_user == @user) %>
				<%= link_to "", "#", :id => "question-link", :ref => "question-panel" %>
				<%= link_to "", "#", :id => "session-link", :ref => "session-panel"  %>
				<%= link_to "", "#", :id => "request-link", :ref => "groups-panel"  %>
			<% else %>
				<%= link_to "", "#", :id => "task-link", :ref => "project-panel"  %>
			<% end %>
		</div>
	</div>
</div>