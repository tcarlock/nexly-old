<% content_for :styles do stylesheet_link_tag "settings" end %>
<% content_for :scripts do javascript_include_tag "settings" end %>

<% content_for :page_header do "Applications and Settings" end %>
<%= hidden_field_tag "display-pages", @display_pages %>
<div id="admin-tabs">
	<ul>
		<li><a href="#tab-platforms">Manage Distribution Websites</a></li>
		<li><a href="#tab-toolbar">Get the Nexly Toolbar</a></li>
		<li><a href="#tab-pages">Create Site Pages</a></li>
	</ul>
	<div id="tabs-1">
		<ul id="subscriptions" class="standard-tiles" style="display:none;">
		<h2 class="edit-section">Manage Your Settings</h2>
			<% @nexly_apps.each do |app| %>
				<li>
					<h2><%= app.title %></h2>
					<p>
						<strong>Details: </strong><%= app.details %>
					</p>
					<h3>Publishing Options</h3>
					<ul id="app-options">
						<% @platforms.each do |platform| %>
							<li>
								<%= check_box_tag platform.id, platform.name %>
								<%= label_tag platform.id, "Publish to " + platform.name.titleize %>
							</li>
						<% end %>
					</ul>
				</li>
			<% end %>
		</ul>
	</div>
	<div id="tabs-2">
		<div style="display:none;">
			<h2 class="edit-section">Reviews Settings</h2>
			<ul id="app-options">
				<% @platforms.each do |platform| %>
					<li>
						<%= check_box_tag platform.id, platform.name %>
						<%= label_tag platform.id, "Publish to " + platform.name.titleize %>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
	<div id="tab-platforms">
		<div class="tab-content-outer">
			<%= render :partial => "main/platform_tabs", :locals => { :show_suggestions => true } %>
		</div>
		<div class="clearfix"></div>
	</div>
	<div id="tab-toolbar">
		<div class="tab-content-outer">
			<h2>Two easy steps to display the Nexly toolbar in your site</h2>
			<div class="form-outer">
				<h5>1) Paste this code immediately <b>after</b> the body-opening tag (i.e., &lt;body&gt;).</h5>
				<%= text_area_tag "toolbar-bootstrap-script", @plugin_bootstrap_script.to_s, :class => "integration-script", :size => '72x6' %>
				<h5>2) Paste this code immediately <b>before</b> the body-closing tag (i.e., &lt;/body&gt;).</h5>
				<%= text_area_tag "toolbar-init-script", @plugin_init_script.to_s, :class => "integration-script", :size => '72x2' %>
			</div>
			<div class="details-text">
				<h3>What is this?</h3>
				<p>
					The Nexly toolbar makes it easy for people to interact with your brand and access information about your business.
				</p>
				<h3>Don't be alarmed by the code...</h3>
				<p>
					By copying two pieces of code into your site the toolbar is automatically loaded with the rest of your page. It appears discreetly at the bottom of your webpages and it won't hurt the performance of your site.
				</p>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<div id="tab-pages">
		<div class="tab-content-outer">
			<h2>Use Nexly to create pages for your site</h2>
			<div class="form-outer">
				<% @content_pages_html.each do |page| %>
					<h5><%= page[:app_title] %> module</h5>					
					<%= text_area_tag "content-page-#{page[:app_id]}", page[:placeholder_html], :class => "integration-script", :size => '72x1' %>
				<% end %>
			</div>
			<div class="details-text">
				<h3>What is this?</h3>
				<p>
					Nexly can automatically populate and update pages on your website with useful information like client reviews.
				</p>
				<h3>How does it work?</h3>
				<p>
					Simply paste the code where you want content displayed in your site. Pick and choose the features you want included. 
				</p>
			</div>
		</div>
		<div class="clearfix"></div>
	</div>
	<% if ENV['RAILS_ENV'] == 'development'%>
		<div>
			<%= form_tag :main_test_tweet, :method => :post,  :remote => true do %>
				<%= submit_tag "Post Tweet" %>
			<% end %>
			<%= form_tag :main_test_li_update, :method => :post,  :remote => true do %>
				<%= submit_tag "Post to LinkedIn" %>
			<% end %>
			<%= form_tag :main_test_fb_post, :method => :post,  :remote => true do %>
				<%= submit_tag "Post to FB" %>
			<% end %>
		</div>
	<% end %>
	<div class="clearfix"></div>
</div>