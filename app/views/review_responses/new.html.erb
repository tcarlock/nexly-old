<% content_for :styles do stylesheet_link_tag "review_responses" end %>

<% content_for :page_header do "Post a Review Response" end %>
<h4>Original review posted by <%= @review.name %>:</h4>
<p class="original-text">
	<%= @review.details %>
</p>
<%= semantic_form_for(@response, :url => business_reviews_path) do |f| %>
	<%= f.inputs do %>
	  <%= f.input :response , :label => 'Response:', :input_html => { :rows => 6 } %>
	<% end %>
	<%= f.buttons do %>
	  <%= f.commit_button 'Submit Review Response' %>
    <% end %>
<% end %>
