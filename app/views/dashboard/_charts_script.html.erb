<script type="text/javascript">
	$(function() {
		var height = 193;

		Highcharts.theme = {
			credits: {
				enabled: false
			},
			colors: ['#92C1E9','#AA4643','#abdb73','#80699B','#3D96AE'],
		  	title: {
		    	style: {
		      		color: '#646464',
		      		font: 'bold 13px "Helvetica Neue",Helvetica,Arial,sans-serif'
		    	}
		  	},
		  	subtitle: {
		      	style: { 
		         	color: '#646464',
		         	font: 'bold 12px "Helvetica Neue",Helvetica,Arial,sans-serif'
		      	}
		   	},
		   	xAxis: {
		      	labels: {
		        	style: {
		            	color: '#272727',
		            	font: '12px "Helvetica Neue",Helvetica,Arial,sans-serif'
		         	}
		      	},
		      	title: {
		        	style: {
			            color: '#646464',
			            fontWeight: 'bold',
			            fontSize: '12px',
			            fontFamily: '"Helvetica Neue",Helvetica,Arial,sans-serif'
			        }            
			    }
		   	},
		   	yAxis: {
				labels: {
		        	style: {
		            	color: '#272727',
		            	font: '12px "Helvetica Neue",Helvetica,Arial,sans-serif'
		         	}
		      	},
				title: {
		        	style: {
			            color: '#646464',
			            fontWeight: 'bold',
			            fontSize: '12px',
			            fontFamily: '"Helvetica Neue",Helvetica,Arial,sans-serif'
			        }            
			    }
		   	},
		   	legend: {
				borderWidth: 0,
		      	itemStyle: {
		            color: '#272727',
		            font: '12px "Helvetica Neue",Helvetica,Arial,sans-serif'
		        },
		     	itemHoverStyle: {
		        	color: '#039'
		      	},
		      	itemHiddenStyle: {
		        	color: 'gray'
		      	}
		   	},
			tooltip: {
				borderWidth: 1,
				borderColor: '#909090'
			},
		   	labels: {
		      	style: {
		        	color: '#99b'
		      	}
		   	}
		};

		// Apply the theme
		var highchartsOptions = Highcharts.setOptions(Highcharts.theme);

		if ($('#traffic-trend-chart').length == 1) {
			new Highcharts.Chart({
				chart: {
					renderTo: 'traffic-trend-chart',
					defaultSeriesType: 'column',
					height: 177,
					width: 505
				},
				title: {
					text: 'Monthly Page Views'
				},
				plotOptions: {
					column: {
						stacking: 'normal',
						borderWidth: 0,
						shadow: false,
						marker: {
               				enabled: false,
               				symbol: 'circle',
							radius: 2,
							states: {
								hover: {
							    	enabled: true
							  	}
							}
               			}
					}
				},
				tooltip: {
					formatter: function() {
			        	return this.total + ' total page views<br />' + this.y + ' ' + this.series.name.toLowerCase();
			      	}
			    },
				xAxis: {
					type: 'datetime',
					labels: {
						y: 17,
						formatter: function() {
			               return Highcharts.dateFormat('%b', this.value) + '<br />\'' + Highcharts.dateFormat('%y', this.value);
			            }
					},
					tickInterval: 24 * 3600 * 1000 * 30
				},
				yAxis: {
					title: {
						text: null
					}
				},
				series: [{
					name: 'From Reviews',
					data: <%= raw @review_page_view_time_series %>
				},{
					name: 'From Recommendations',
					data: <%= raw @recommendation_page_view_time_series %>
				}]
			});
		}
		
		if ($('#rating-dist-chart').length == 1) {
			new Highcharts.Chart({
				chart: {
					renderTo: 'rating-dist-chart',
					defaultSeriesType: 'bar',
					height:height,
					width:230
				},
				title: {
					text: 'Rating Distribution'
				},
				legend: {
					enabled: false
				},
				plotOptions: {
					bar: {
						stacking: 'normal',
						pointPadding: 0.05,
						groupPadding: 0,
						borderWidth: 0,
						shadow: false
					}
				},
				tooltip: {
					formatter: function() {
			        	return '<b>' + this.y + ' ratings</b>';
			      	}
			    },
				xAxis: {
			        categories: ['5 stars', '4 stars', '3 stars', '2 stars', '1 star'],
			        title: {
			        	text: null
			        }
			    },
				yAxis: {
					gridLineWidth: 0,
					labels: {
						enabled: false
					},
					title: {
						text: null
					}
				},
				series: [{
					name: 'Rating Distribution',
					data: <%= raw @rating_dist.reverse! %>
				}]
			});
		}

		if ($('#channel-allocation-chart').length == 1) {
			new Highcharts.Chart({
				chart: {
					renderTo: 'channel-allocation-chart',
					defaultSeriesType: 'pie',
					height:height,
					width:283
				},
				title: {
					text: 'Sources of Page Views (by Channel)'
				},
				legend: {
					layout: 'vertical',
					align: 'right',
					verticalAlign: 'middle',
					labelFormatter: function() {
			        	return this.name + ' (' + Math.round(this.y) + '%)';
			      	},
				},
				plotOptions: {
					pie: {
						size: '90%',
						dataLabels: {
							distance: 20,
							formatter: function() {
					        	return this.point.name + '<br />(' + Math.round(this.percentage) + '%)';
					      	},
					      	enabled: false
	            		},
	            		showInLegend: true
					}
				},
				tooltip: {
					formatter: function() {
			        	return this.point.name + ' (' + Math.round(this.percentage) + '%)';
			      	}
			    },
				series: [{
					data: <%= raw @channel_allocation %>
				}]
			});
		}

		if ($('#platform-allocation-chart').length == 1) {
			new Highcharts.Chart({
				chart: {
					renderTo: 'platform-allocation-chart',
					defaultSeriesType: 'pie',
					height:height,
					width:363
				},
				title: {
					text: 'Sources of Social Page Views (by Site)'
				},
				legend: {
					layout: 'vertical',
					align: 'right',
					verticalAlign: 'middle',
					labelFormatter: function() {
			        	return this.name + ' (' + Math.round(this.y) + '%)';
			      	},
				},
				plotOptions: {
					pie: {
						size: '90%',
						dataLabels: {
							distance: 20,
							formatter: function() {
					        	return this.point.name + '<br />(' + Math.round(this.percentage) + '%)';
					      	},
					      	enabled: false
	            		},
	            		showInLegend: true
					}
				},
				tooltip: {
					formatter: function() {
			        	return this.point.name + ' (' + Math.round(this.percentage) + '%)';
			      	}
			    },
				series: [{
					data: <%= raw @platform_allocation %>
				}]
			});
		}
	});
</script>