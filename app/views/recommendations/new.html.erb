<%= javascript_include_tag "new_recommendation" %>
<%= stylesheet_link_tag "recommendations" %>

<div id="new-rec-outer">
	<h1>Recommend <%= @business.name %></h1>
	<%= semantic_form_for(@rec, :url => business_recommendations_path, :validate => true) do |f| %>
		<%= f.inputs do %>
		  <%= f.input :name , :label => "Your name:" %>
		  <%= f.input :email , :label => "Recipient's email:" %>
		  <%= f.input :message , :label => "Message: (optional)", :input_html => { :rows => 5 } %>
		<% end %>
		<%= f.buttons do %>
			<%= f.commit_button 'Send Recommendation' %>
	    <% end %>
	<% end %>
</div>
