<%= stylesheet_link_tag "app_global", "toolbar", "public/formtastic", "public/formtastic_changes" %>

<div id="toolbarbut"> <!-- hide button -->
	<span class="showbar"><a href="#">show bar</a></span>
</div>
<div id="toolbar"> <!-- toolbar container -->
	<div class="leftside"> <!-- all things in floating left side -->
		<ul>
			<% if !@business.linked_in.empty? %>
				<li>
					<a class="link-button linkedin" href="<%= @business.linked_in %>"></a> 
				</li>
			<% end %>
			<% if !@business.twitter.empty? %>
				<li>
					<a class="link-button twitter" href="<%= @business.twitter %>"></a> 
				</li>
			<% end %>
			<% if !@business.facebook.empty? %>
				<li>
					<a class="link-button facebook" href="<%= @business.facebook %>"></a> 
				</li>
			<% end %>
		</ul>
	</div>
	<div class="rightside"> <!-- all things in floating right side -->
		<span class="downarr"> <!-- hide button -->
			<a href="#"></a>
		</span>
		<span id="reviews-btns" class="btn_container">
			<% if is_rev_enabled == true %>
				<%= link_to new_business_review_path(@business), :id => "new-review-btn", :class => "link-button" do %>
					<span>Post a Review</span>
				<% end %>
			<% end %>
			<% if is_rec_enabled == true %>
				<%= link_to new_business_recommendations_path(@business), :id => "new-rec-btn", :class => "link-button" do %>
					<span>Tell Someone</span>
				<% end %>
			<% end %>
		</span>
		<span class="menu_title">
			<a class="menutit" href="#" data-toolbar-id="reviews-btns">
				Reviews (<%= @reviews.count %>)
			</a> <!-- quick menu title -->
			<div class="quickmenu">
				<div class="quickmenu-inner">
					<% if @reviews.empty? %>
						<span class="no-records">There are no reviews at this time</span>
					<% else %>
						<ul class="nexly-list"> <!-- quick menu list -->
							<%= render :partial => 'plugins/review', :collection => @reviews, :locals => { :show_admin => false, :truncate_review => false } %>
						</ul>
					<% end %>
				</div>
			</div>
		</span>
	</div>
</div>
<div class="clearfix"></div>