<%= stylesheet_link_tag "app_global", "toolbar", "plugins", "public/formtastic", "public/formtastic_changes", "jquery.ui.stars.min.css" %>
<%= javascript_include_tag "jquery.ui.stars.min.js", "public/jquery.validate.min.js", "public/jquery.form.js", "public/jquery.blockUI.js" %>

<div id="toolbarbut"> <!-- hide button -->
	<span class="showbar"><a href="#">show bar</a></span>
</div>
<div id="toolbar"> <!-- toolbar container -->
	<div class="leftside"> <!-- all things in floating left side -->
		<ul>
			<% unless Rails.env == "production" %>
				<li>
					<a class="rss" href="/dashboard"></a><!-- icon -->
				</li>
			<% end %>
			<% unless @business.linked_in.empty? %>
				<li>
					<a class="link-button linkedin" href="<%= @business.linked_in %>"></a> 
				</li>
			<% end %>
			<% unless @business.twitter.empty? %>
				<li>
					<a class="link-button twitter" href="<%= @business.twitter %>"></a> 
				</li>
			<% end %>
			<% unless @business.facebook.empty? %>
				<li>
					<a class="link-button facebook" href="<%= @business.facebook %>"></a> 
				</li>
			<% end %>
		</ul>
	</div>
	<div class="rightside"> <!-- all things in floating right side -->
		<span class="downarr"> <!-- hide button -->
			<a href="#"></a>
		</span>
		<% if @enable_reviews %>
			<span id="reviews-btns" class="btn-container">
				<% if tb_show_rec_btn %>
					<span class="menu_title">
						<%= link_to "Tell Someone", new_business_recommendations_path(@business, :v => "popup"), :id => "new-rec-btn", :class => "menutit" %>
						<div class="quickmenu" id="new-rec-outer">
						</div>
					</span>
				<% end %>
				<% if is_rev_enabled %>
					<span class="menu_title">
						<%= link_to "Post a Review", new_business_review_path(@business, :v => "popup"), :id => "new-review-btn", :class => "menutit" %>
						<div class="quickmenu" id="new-review-outer">
						</div>
					</span>
				<% end %>
			</span>
			<span class="menu_title">
				<a class="menutit" href="#" data-toolbar-id="reviews-btns">
					Reviews (<%= @reviews.count %>)
				</a> <!-- quick menu title -->
				<div class="quickmenu">
					<% if @reviews.empty? %>
						<span class="no-records">There are no reviews at this time</span>
					<% else %>
						<ul class="nexly-toolbar-list"> <!-- quick menu list -->
							<%= render :partial => 'plugins/review', :collection => @reviews, :locals => { :truncate_review => false } %>
						</ul>
					<% end %>
				</div>
			</span>
		<% end %>
		<% if @enable_news %>
			<span class="menu_title">
				<a class="menutit" href="#">
					News Updates (<%= @news_posts.count %>)
				</a> <!-- quick menu title -->
				<div class="quickmenu">
					<div class="quickmenu-inner">
						<% if @news_posts.empty? %>
							<span class="no-records">There are no news updates at this time</span>
						<% else %>
							<ul class="nexly-toolbar-list"> <!-- quick menu list -->
								<%= render :partial => 'plugins/news_post', :collection => @news_posts, :locals => { :truncate_post => false } %>
							</ul>
						<% end %>
					</div>
				</div>
			</span>
		<% end %>
	</div>
</div>
<div class="clearfix"></div>