<% content_for :styles do stylesheet_link_tag "review_requests" end %>
<% content_for :scripts do javascript_include_tag "review_requests" end %>

<% if @requests.empty? %>
	<span class="no-records">There are no review requests at this time. <%= link_to 'Send New Requests', new_business_review_request_path(@business) %></span>
<% else %>
	<ul id="review-requests" class="standard-list">
		<%= render @requests %>
	</ul>
	<%= render :partial => 'shared/pager', :locals => { :items => @requests, :label => 'pending request' } %>
<% end %>