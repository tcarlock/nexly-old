<%= semantic_form_for @business, :html => {:multipart => true} do |f| %>
  <%= f.inputs do %>
    
    <%= f.input :business_name %>
    <%= f.input :facebook %>
    <%= f.input :twitter %>
    <%= f.input :google_plus %>
    <%= f.input :linked_in %>
    <%= f.input :biography, :input_html => { :rows => 6 } %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip_code %>
    <%= f.input :avatar %>
    <%= raw display_logo(@business)%>
    <!--
      TODO make this a remote form
    -->
    <%= f.input :remove_avatar, :as => :boolean %>
    
  <% end %>
  <%= f.buttons %>
<% end %>