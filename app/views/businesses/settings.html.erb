<% content_for :styles do stylesheet_link_tag "app_subscriptions" end %>

<h1>Manage Your Applications</h1>
<ul id="subscriptions" class="standard-tiles">
	<% @apps.each do |app| %>
		<li>
			<h2><%= app.title %></h2>
			<p>
				<strong>Details: </strong><%= app.details %>
			</p>
			<h3>Settings</h3>
			<ul style="list-style-type:none;padding-left:10px;">
				<li>
					<%= check_box_tag :selected => true %>
					Publish to Facebook
				</li>
			</ul>
		</li>
	<% end %>
</ul>

<h1>Manage Your Platforms</h1>
<a href="/auth/twitter" class="auth_provider">
  <%= image_tag "social/twitter-2.png", :size => "32x32", :alt => "Twitter" %>
  <span>Add Twitter</span>
</a>
<a href="/auth/facebook" class="auth_provider">
  <%= image_tag "social/facebook.png", :size => "32x32", :alt => "Facebook" %>
  <span>Add Facebook</span>
</a>
<a href="/auth/linkedin" class="auth_provider">
  <%= image_tag "social/linkedin.png", :size => "32x32", :alt => "LinkedIn" %>
  <span>Add LinkedIn</span>
</a>
<a href="/auth/google_apps" class="auth_provider">
  <%= image_tag "social/google-plus.png", :size => "32x32", :alt => "Google" %>
  <span>Add Google+</span>
</a>

<div style="display:none;">
	<%= form_tag :main_test_tweet, :method => :post,  :remote => true do %>
		<%= submit_tag "Post Tweet" %>
	<% end %>
	<%= form_tag :main_test_fb_post, :method => :post,  :remote => true do %>
		<%= submit_tag "Post to FB" %>
	<% end %>
</div>